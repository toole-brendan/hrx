# HandReceipt Production Environment Configuration
# IMPORTANT: Update these values before deploying to production!

# JWT Secret - MUST be changed to a secure random string
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_BEFORE_PRODUCTION

# Database Configuration
HR_DATABASE_HOST=postgres
HR_DATABASE_PORT=5432
HR_DATABASE_USER=handreceipt
HR_DATABASE_PASSWORD=CHANGE_THIS_DATABASE_PASSWORD
HR_DATABASE_DB_NAME=handreceipt

# ImmuDB Configuration
HR_IMMUDB_HOST=immudb
HR_IMMUDB_PORT=3322
HR_IMMUDB_USERNAME=immudb
HR_IMMUDB_PASSWORD=CHANGE_THIS_IMMUDB_PASSWORD
HR_IMMUDB_DATABASE=defaultdb
HR_IMMUDB_ENABLED=true

# MinIO Configuration
HR_MINIO_ENDPOINT=minio:9000
HR_MINIO_ACCESS_KEY_ID=CHANGE_THIS_MINIO_ACCESS_KEY
HR_MINIO_SECRET_ACCESS_KEY=CHANGE_THIS_MINIO_SECRET_KEY
HR_MINIO_USE_SSL=false
HR_MINIO_BUCKET_NAME=handreceipt
HR_MINIO_ENABLED=true

# Server Configuration
HR_SERVER_PORT=8080
HR_SERVER_ENVIRONMENT=production

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD 