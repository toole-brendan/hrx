# HandReceipt Backend Environment Variables
# Copy to .env and update with your values

# REQUIRED: JWT Secret Key (minimum 32 characters)
HANDRECEIPT_JWT_SECRET_KEY=your-secret-key-here-minimum-32-characters

# REQUIRED: Session Secret (minimum 32 characters) 
HANDRECEIPT_AUTH_SESSION_SECRET=your-session-secret-here-minimum-32-chars

# Database credentials (optional if using config file)
HANDRECEIPT_DATABASE_HOST=localhost
HANDRECEIPT_DATABASE_PORT=5432
HANDRECEIPT_DATABASE_USER=handreceipt
HANDRECEIPT_DATABASE_PASSWORD=your_password
HANDRECEIPT_DATABASE_NAME=handreceipt

# Azure Storage (for production)
HANDRECEIPT_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string

# Azure OCR (optional)
AZURE_OCR_ENDPOINT=https://your-vision.cognitiveservices.azure.com/
AZURE_OCR_KEY=your_ocr_key

# Azure OpenAI (optional)
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_KEY=your_openai_key