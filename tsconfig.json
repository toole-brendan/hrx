{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "sql/**/*.ts",
    "backend/**/*.ts",
    "web/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ],
  "references": [
    { "path": "./sql" },
    { "path": "./web" }
  ]
} 